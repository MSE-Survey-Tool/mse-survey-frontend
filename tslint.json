{
  "extends": "tslint:recommended",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "public",
    "build"
  ],
  "rules": {
    // See all rules at https://palantir.github.io/tslint/rules/

    "ban-ts-ignore": false,
    "curly": true,
    "cyclomatic-complexity": [
      true,
      15
    ],
    "encoding": true,
    "file-name-casing": [true, "camel-case", "pascal-case"],
    "max-file-line-count": [
      true,
      250
    ],
    "max-line-length": {
      "options": [
        120
      ]
    },
    "newline-before-return": false,
    "no-any": false,
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "no-console": [
      true,
      "log"
    ],
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-empty": [
      true,
      "allow-empty-catch",
      "allow-empty-functions"
    ],
    "no-eval": true,
    "no-implicit-dependencies": true,
    "no-import-side-effect": [
      true,
      {
        "ignore-module": "(\\.html|\\.css|\\.scss|\\.sass)$"
      }
    ],
    "no-shadowed-variable": true,
    "no-trailing-whitespace": [
      true,
      "ignore-comments",
      "ignore-jsdoc",
      "ignore-blank-lines"
    ],
    "no-var-requires": true,
    "no-require-imports": true,
    "prefer-const": true,
    "prefer-method-signature": true,
    "prefer-switch": [true, {"min-cases": 2}],
    "quotemark": [
      true,
      "single",
      "jsx-single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "switch-default": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "triple-equals": true,
    "unnecessary-constructor": true,
    "unnecessary-else": [true, {"allow-else-if": true}],
    "variable-name": {
      "options": [
        "check-format",
        "allow-pascal-case",
        "require-const-for-all-caps",
        "ban-keywords"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  },
  "isolated-modules": false
}