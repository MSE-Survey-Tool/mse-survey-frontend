{
  "extends": "tslint:recommended",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "public",
    "build"
  ],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "no-bitwise": false,
    "no-conditional-assignment": false,
    "no-consecutive-blank-lines": false,
    "no-empty": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}